<div class="product-form w-100 m-auto" style="max-width: 600px; padding: 1rem;">
  <form action="/product/{{product.id}}/update" method="post">
    <h5>Atualizar dados do produto</h5>
    <div class="mb-3">
      <label for="name" class="form-label">Nome</label>
      <input type="text" class="form-control" id="name" name="name" value="{{product.name}}" required/>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Pre√ßo</label>
      <input type="number" class="form-control" id="price" name="price" value="{{product.price}}" required/>
    </div>
    <div class="mb-3">
      <label for="stock" class="form-label">Quantidade</label>
      <input type="number" class="form-control" id="stock" name="stock" value="{{product.stock}}" required/>
    </div>
    <button type="submit" class="btn btn-success w-100">Atualizar produto</button>
  </form>
</div>
